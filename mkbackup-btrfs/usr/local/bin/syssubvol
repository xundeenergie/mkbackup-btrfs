#!/bin/bash
#mawk '$5 ~ "^/$" {gsub ("/","",$4);print $4}' /proc/self/mountinfo

SV1=$(basename "$(grub-mkrelpath /)")

[ -x /bin/cat ] || exit 1
SV2=$(grep -sq "=subvol=" /proc/cmdline && /bin/cat /proc/cmdline |sed 's/^.*=subvol=\([^ ]*\) .*$/\1/')

#echo "SV1: $SV1 SV2: $SV2"
if [ "$SV1" == "$SV2" ];then
	echo "$SV1"
else
	echo "$SV1"
fi
